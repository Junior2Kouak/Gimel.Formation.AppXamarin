<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXamarin2.MainPage">

    <StackLayout>
        <Button x:Name="BtnTutorial"
                Text="CLICK ME"
                FontSize="Medium" 
                FontAttributes="Bold"
                WidthRequest="150"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                BackgroundColor="Green"
                TextColor="Beige"
                CornerRadius="20"
                BorderColor="Red"
                BorderWidth="3"
                Clicked="OnClicked"  
                Pressed="OnPressed"
                Released="OnReleased"
        />
    </StackLayout>
    
</ContentPage>
